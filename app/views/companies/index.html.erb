<h1>Listing companies</h1>

<table border="1">
  <tr>
    <th>Razón Social</th>
    <th>Dirección</th>
    <th>Localidad</th>
    <th>Encargado</th>
    <th>Director / Presidente</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.address %></td>
    <td><%= company.locality.locality %></td>
    <td><%= company.manager %><br/>
    	<%= company.user.name %>, <%= company.user.surname %>
    </td>
    <td><%= company.boss %></td>
    <td><%= link_to 'Mas Datos', company %></td>
    <td><%= link_to 'Modificar', edit_company_path(company) %></td>
    <td><%= link_to 'Borrar', company, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


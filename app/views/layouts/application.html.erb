<!DOCTYPE html>
<html>
	<head>
		<title>Pasantes</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if session[:user_id] %>

		<table>
			<tr>
				<td><%= button_to 'Salir de la sesión', logout_path, :method => "delete" %> </td>
				<td><%= button_to 'Principal', admin_url, :method => "get" %> </td>
			</tr>
		</table>
		<table border="0">
			<tr valign="top">
				<% user = User.find_by_id(session[:user_id]) %>
				<% if user.admin == true %>

				<td>
				<ul>
                  Menu Administradores
                    <li>
						<%= link_to 'ABM Empresas',companies_path %>
					</li>

					<li>
						<%= link_to 'ABM Usuarios',users_path %>
					</li>
					<li>
						<%= link_to 'ABM Ofertas',internships_path %>
					</li>
					</br>
					Parametrización del sistema
					<li>
						<%= link_to 'ABM Provincias',provinces_path %>
					</li>
					<li>
						<%= link_to 'ABM Localidades', localities_path %>
					</li>
					<li>
						<%= link_to 'ABM tareas tipicas', tasks_path %>
					</li>

				</ul></td>
				<% end %>
				<td>
				<ul>
					Menu Alumnos
					<li>
						<%= link_to 'Ofertas',internships_path %>
					</li>
					<li>
						Subir CV
					</li>
				</ul></td>

			</tr>
		</table>

		<% end %>
		<hr>
		<%= yield %>

	</body>
</html>

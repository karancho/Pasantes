
<h1>Usuarios en base</h1>

<p><%= link_to 'Usuario nuevo', new_user_path %></p>


<table border="1">
  <tr>
  	<th></th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Dni</th>
    <th colspan="2">Nivel</th>
    <th>Empresario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<td><%= user.treatment.treatment %></td>
    <td><%= user.name %></td>
    <td><%= user.surname %></td>
    <td><%= user.dni %></td>
    <td><%= "Administrador" if user.admin %>  </td>
    <td><%= "Empresario"    if user.manager %></td>
    <td><%= link_to 'Mas / Chequear CV', user %></td>
    <td><%= link_to 'Corregir Datos', edit_user_path(user) %></td>
    <td><%= link_to 'Borrar', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


